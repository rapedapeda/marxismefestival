{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
<div class="number-input">
    <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()" ><i class="la la-minus"></i></button>
    <input{{ attributes.addClass("form-control") }} />{{ children }}
    <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()" class="plus"><i class="la la-plus"></i></button>
</div>